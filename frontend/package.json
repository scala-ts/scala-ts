{
  "name": "scala-ts-demo-frontend",
  "version": "0.0.1",
  "license": "disable-warning",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "clean-dist": "rimraf ./dist",
    "rollup-esm": "node --experimental-json-modules ./node_modules/.bin/rollup",
    "dev": "yarn && concurrently \"yarn rollup-esm --watch --configPlugin typescript --config build/rollup.config.ts\" \"tsc --watch --noEmit\" \"svelte-check --watch\"",
    "build": "yarn && yarn check-circular-dependencies && yarn clean-dist && concurrently \"svelte-check\" \"tsc --noEmit\" \"yarn rollup-esm --configPlugin typescript --config build/rollup.config.ts\"",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register \"./src/**/*.test.ts\"",
    "serve": "sirv dist --port 5000 --single",
    "check-circular-dependencies": "node build/check-circular-deps.js",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "reset": "rm -rf node_modules && rm yarn.lock && yarn cache clean && yarn"
  },
  "dependencies": {
    "idonttrustlikethat": "2.1.0",
    "space-lift": "1.0.4",
    "typescript-router": "0.0.6"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "5.0.0",
    "@rollup/plugin-commonjs": "25.0.2",
    "@rollup/plugin-html": "1.0.2",
    "@rollup/plugin-node-resolve": "15.1.0",
    "@rollup/plugin-replace": "5.0.2",
    "@rollup/plugin-typescript": "11.1.1",
    "@types/estree": "1.0.1",
    "@types/expect": "24.3.0",
    "@types/mocha": "10.0.1",
    "@types/node": "20.3.1",
    "concurrently": "8.2.0",
    "cross-env": "7.0.3",
    "dotenv": "16.3.1",
    "esbuild": "0.18.4",
    "expect": "29.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "madge": "^6.1.0",
    "mocha": "10.2.0",
    "prettier": "2.8.8",
    "prettier-plugin-svelte": "2.10.1",
    "rimraf": "5.0.1",
    "rollup": "3.25.1",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-css-asset": "1.0.2",
    "rollup-plugin-esbuild": "5.0.0",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-svelte": "7.1.5",
    "sass": "1.63.4",
    "sirv-cli": "2.0.2",
    "svelte": "3.59.2",
    "svelte-check": "3.4.3",
    "svelte-preprocess": "5.0.4",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
