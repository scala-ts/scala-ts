{
  "name": "scala-ts-demo-frontend",
  "version": "0.0.1",
  "license": "disable-warning",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "clean-dist": "rimraf ./dist",
    "type-check-rollup-config": "tsc build/rollup.config.ts --strict --esModuleInterop --skipLibCheck --noEmit",
    "build-rollup-config": "esbuild build/rollup.config.ts build/indexTemplate.ts build/envValidator.ts --outdir=build",
    "dev": "yarn && yarn build-rollup-config && concurrently \"rollup --watch --config build/rollup.config.js\" \"tsc --watch --noEmit\" \"svelte-check --watch\"",
    "build": "yarn && yarn check-circular-dependencies && yarn clean-dist && yarn build-rollup-config && concurrently \"svelte-check\" \"tsc --noEmit\" \"rollup --config build/rollup.config.js\" \"yarn type-check-rollup-config\"",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register \"./src/**/*.test.ts\"",
    "serve": "sirv dist --port 5000 --single",
    "check-circular-dependencies": "node build/check-circular-deps.js",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "reset": "rm -rf node_modules && rm yarn.lock && yarn cache clean && yarn"
  },
  "dependencies": {
    "idonttrustlikethat": "2.0.8",
    "space-lift": "1.0.4",
    "typescript-router": "0.0.6"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-commonjs": "21.0.2",
    "@rollup/plugin-html": "0.2.4",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-replace": "4.0.0",
    "@types/estree": "0.0.51",
    "@types/expect": "24.3.0",
    "@types/node": "17.0.21",
    "concurrently": "7.0.0",
    "cross-env": "7.0.3",
    "dotenv": "16.0.0",
    "esbuild": "0.8.30",
    "expect": "27.5.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "madge": "^5.0.1",
    "mocha": "9.2.2",
    "@types/mocha": "9.1.0",
    "prettier": "2.5.1",
    "prettier-plugin-svelte": "2.6.0",
    "rimraf": "3.0.2",
    "rollup": "2.70.1",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-css-asset": "1.0.2",
    "rollup-plugin-esbuild": "3.0.4",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-svelte": "7.1.0",
    "sass": "1.49.11",
    "sirv-cli": "2.0.2",
    "svelte": "3.46.4",
    "svelte-check": "2.4.5",
    "svelte-preprocess": "4.10.4",
    "svelte-preprocess-esbuild": "1.0.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
