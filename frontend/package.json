{
  "name": "scala-ts-demo-frontend",
  "version": "0.0.1",
  "license": "disable-warning",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "clean-dist": "rimraf ./dist",
    "rollup-esm": "node --experimental-json-modules ./node_modules/.bin/rollup",
    "dev": "yarn && concurrently \"yarn rollup-esm --watch --configPlugin typescript --config build/rollup.config.ts\" \"tsc --watch --noEmit\" \"svelte-check --watch\"",
    "build": "yarn && yarn check-circular-dependencies && yarn clean-dist && concurrently \"svelte-check\" \"tsc --noEmit\" \"yarn rollup-esm --configPlugin typescript --config build/rollup.config.ts\"",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register \"./src/**/*.test.ts\"",
    "serve": "sirv dist --port 5000 --single",
    "check-circular-dependencies": "node build/check-circular-deps.js",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "reset": "rm -rf node_modules && rm yarn.lock && yarn cache clean && yarn"
  },
  "dependencies": {
    "idonttrustlikethat": "2.1.0",
    "space-lift": "1.0.4",
    "typescript-router": "0.0.6"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "10.0.1",
    "@rollup/plugin-alias": "4.0.2",
    "@rollup/plugin-commonjs": "23.0.4",
    "@rollup/plugin-html": "1.0.1",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-replace": "5.0.1",
    "@types/estree": "1.0.0",
    "@types/expect": "24.3.0",
    "@types/node": "18.11.14",
    "concurrently": "7.6.0",
    "cross-env": "7.0.3",
    "dotenv": "16.0.3",
    "esbuild": "0.16.4",
    "expect": "29.3.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "madge": "^5.0.1",
    "mocha": "10.2.0",
    "@types/mocha": "10.0.1",
    "prettier": "2.8.1",
    "prettier-plugin-svelte": "2.9.0",
    "rimraf": "3.0.2",
    "rollup": "3.7.4",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-css-asset": "1.0.2",
    "rollup-plugin-esbuild": "5.0.0",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-svelte": "7.1.0",
    "sass": "1.56.2",
    "sirv-cli": "2.0.2",
    "svelte": "3.54.0",
    "svelte-check": "2.10.2",
    "svelte-preprocess": "4.10.7",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
