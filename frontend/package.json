{
  "name": "scala-ts-demo-frontend",
  "version": "0.0.1",
  "license": "disable-warning",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "clean-dist": "rimraf ./dist",
    "typecheck-rollup-config": "tsc build/rollup.config.ts --strict --esModuleInterop --skipLibCheck --noEmit",
    "build-rollup-config": "esbuild build/rollup.config.ts build/indexTemplate.ts build/envValidator.ts --outdir=build",
    "dev": "yarn && yarn build-rollup-config && concurrently \"rollup --watch --config build/rollup.config.js\" \"tsc --watch --noEmit\" \"svelte-check --watch\"",
    "foo": "rollup --config build/rollup.config.js",
    "build": "yarn && yarn check-circular-dependencies && yarn clean-dist && yarn build-rollup-config && concurrently \"svelte-check\" \"tsc --noEmit\" \"rollup --config build/rollup.config.js\" \"yarn typecheck-rollup-config\"",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register \"./src/**/*.test.ts\"",
    "serve": "sirv dist --port 5000 --single",
    "check-circular-dependencies": "node build/check-circular-deps.js",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "reset": "rm -rf node_modules && rm yarn.lock && yarn cache clean && yarn"
  },
  "dependencies": {
    "idonttrustlikethat": "2.1.0",
    "space-lift": "1.0.4",
    "typescript-router": "0.0.6"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "4.0.0",
    "@rollup/plugin-commonjs": "23.0.0",
    "@rollup/plugin-html": "1.0.0",
    "@rollup/plugin-node-resolve": "15.0.0",
    "@rollup/plugin-replace": "5.0.0",
    "@types/estree": "1.0.0",
    "@types/expect": "24.3.0",
    "@types/node": "18.8.5",
    "concurrently": "7.4.0",
    "cross-env": "7.0.3",
    "dotenv": "16.0.3",
    "esbuild": "0.15.10",
    "expect": "29.1.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "madge": "^5.0.1",
    "mocha": "10.0.0",
    "@types/mocha": "10.0.0",
    "prettier": "2.7.1",
    "prettier-plugin-svelte": "2.8.0",
    "rimraf": "3.0.2",
    "rollup": "2.79.1",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-css-asset": "1.0.2",
    "rollup-plugin-esbuild": "4.10.1",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-svelte": "7.1.0",
    "sass": "1.55.0",
    "sirv-cli": "2.0.2",
    "svelte": "3.51.0",
    "svelte-check": "2.9.2",
    "svelte-preprocess": "4.10.7",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
