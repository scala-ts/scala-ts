{
  "name": "scala-ts-demo-frontend",
  "version": "0.0.1",
  "license": "disable-warning",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "clean-dist": "rimraf ./dist",
    "rollup-esm": "node --experimental-json-modules ./node_modules/.bin/rollup",
    "dev": "yarn && concurrently \"yarn rollup-esm --watch --configPlugin typescript --config build/rollup.config.ts\" \"tsc --watch --noEmit\" \"svelte-check --watch\"",
    "build": "yarn && yarn check-circular-dependencies && yarn clean-dist && concurrently \"svelte-check\" \"tsc --noEmit\" \"yarn rollup-esm --configPlugin typescript --config build/rollup.config.ts\"",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register \"./src/**/*.test.ts\"",
    "serve": "sirv dist --port 5000 --single",
    "check-circular-dependencies": "node build/check-circular-deps.js",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "reset": "rm -rf node_modules && rm yarn.lock && yarn cache clean && yarn"
  },
  "dependencies": {
    "idonttrustlikethat": "2.1.2",
    "space-lift": "1.0.4",
    "typescript-router": "0.0.6"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "12.1.1",
    "@rollup/plugin-alias": "5.1.1",
    "@rollup/plugin-commonjs": "28.0.1",
    "@rollup/plugin-html": "1.0.4",
    "@rollup/plugin-node-resolve": "15.3.0",
    "@rollup/plugin-replace": "6.0.1",
    "@types/estree": "1.0.6",
    "@types/expect": "24.3.2",
    "@types/node": "22.9.0",
    "concurrently": "9.1.0",
    "cross-env": "7.0.3",
    "dotenv": "16.4.5",
    "esbuild": "0.24.0",
    "expect": "29.7.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "madge": "^8.0.0",
    "mocha": "10.8.2",
    "@types/mocha": "10.0.9",
    "prettier": "3.3.3",
    "prettier-plugin-svelte": "3.2.7",
    "rimraf": "6.0.1",
    "rollup": "4.24.4",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-css-asset": "1.0.2",
    "rollup-plugin-esbuild": "6.1.1",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-svelte": "7.2.2",
    "sass": "1.80.6",
    "sirv-cli": "3.0.0",
    "svelte": "5.1.14",
    "svelte-check": "4.0.6",
    "svelte-preprocess": "6.0.3",
    "ts-node": "10.9.2",
    "typescript": "5.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
